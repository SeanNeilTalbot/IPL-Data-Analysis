DROP DATABASE IF EXISTS db_IPL;
CREATE DATABASE db_IPL;
USE db_IPL;

DROP TABLE IF EXISTS matches;
CREATE TABLE matches
(
	id INT NOT NULL AUTO_INCREMENT,
    PRIMARY KEY (id),
    season INT NOT NULL,
    city VARCHAR(50) NOT NULL,
    match_date DATE NOT NULL,
    team1 VARCHAR(50) NOT NULL,
    team2 VARCHAR(50) NOT NULL,
    toss_winner VARCHAR(50) NOT NULL,
    toss_decision VARCHAR(50) NOT NULL,
    result VARCHAR(50) NOT NULL,
    dl_applied VARCHAR(50) NOT NULL,
    winner VARCHAR(50) NOT NULL,
    win_by_runs INT NULL,
    win_by_wickets INT NULL,
    player_of_match  VARCHAR(50) NOT NULL,
    venue VARCHAR(50) NOT NULL,
    umpire1 VARCHAR(50) NOT NULL,
    umpire2 VARCHAR(50) NOT NULL,
    umpire3 VARCHAR(50) NOT NULL
);
